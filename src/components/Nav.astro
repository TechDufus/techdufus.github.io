---
import { docsNavigation, primaryNavigation } from '../data/site';

const pathname = Astro.url.pathname;

const routeMatches = (href: string) =>
  href === '/' ? pathname === '/' : pathname === href || pathname.startsWith(`${href}/`);

const docsActive = docsNavigation.some((item) => routeMatches(item.href));
const docsMenuId = 'docs-menu-popover';
---

<header class="sticky top-4 z-40 mb-8 sm:mb-10">
  <div class="rounded-2xl border border-white/10 bg-[#0b0d13]/82 p-2.5 shadow-editor backdrop-blur-md">
    <div class="flex flex-wrap items-center justify-between gap-2">
      <a
        class="inline-flex items-center rounded-lg border border-line bg-panel px-3 py-2 font-mono text-sm text-signal no-underline transition hover:border-signal/45 hover:text-electric"
        href="/"
      >
        {`{ TechDufus }`}
      </a>

      <nav aria-label="Primary" class="w-full sm:w-auto">
        <ul class="flex flex-wrap items-center gap-1.5 text-sm">
          {primaryNavigation.map((item) => (
            <li>
              <a
                class:list={[
                  'nav-link',
                  routeMatches(item.href) && 'nav-link-active'
                ]}
                href={item.href}
                aria-current={routeMatches(item.href) ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}

          <li>
            <details class="docs-menu">
              <summary
                class:list={['nav-link docs-summary', docsActive && 'nav-link-active']}
                aria-controls={docsMenuId}
                aria-expanded="false"
              >
                Docs
                <span class="docs-caret" aria-hidden="true">â–¾</span>
              </summary>
              <ul class="docs-popover" id={docsMenuId}>
                {docsNavigation.map((item) => (
                  <li>
                    <a
                      class:list={[
                        'docs-popover-link',
                        routeMatches(item.href) && 'docs-popover-link-active'
                      ]}
                      href={item.href}
                      aria-current={routeMatches(item.href) ? 'page' : undefined}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  import { initDocsMenus } from '../lib/client/docsMenu';
  initDocsMenus();
</script>
