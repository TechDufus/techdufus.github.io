---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { siteMetadata } from '../data/site';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
  ogImage?: string;
  ogImageAlt?: string;
  ogImageWidth?: number;
  ogImageHeight?: number;
  ogType?: 'website' | 'article';
  twitterCard?: 'summary' | 'summary_large_image';
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title = siteMetadata.siteName,
  description = siteMetadata.description,
  noindex = false,
  ogImage,
  ogImageAlt = siteMetadata.media.defaultSocialImageAlt,
  ogImageWidth = siteMetadata.media.defaultSocialImageWidth,
  ogImageHeight = siteMetadata.media.defaultSocialImageHeight,
  ogType = 'website',
  twitterCard = 'summary_large_image',
  publishedTime,
  modifiedTime
} = Astro.props;

const resolveAbsolute = (value: string): string =>
  new URL(value.startsWith('http') ? value : value.startsWith('/') ? value : `/${value}`, siteMetadata.url).toString();

const pageTitle = title === siteMetadata.siteName ? title : `${title} | ${siteMetadata.siteName}`;
const canonicalPath =
  Astro.url.pathname === '/404/' || Astro.url.pathname === '/404' ? '/404.html' : Astro.url.pathname;
const canonical = new URL(canonicalPath, siteMetadata.url).toString();
const socialImage = resolveAbsolute(ogImage ?? siteMetadata.media.defaultSocialImage);
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content={siteMetadata.author} />
    <meta name="theme-color" content={siteMetadata.media.themeColor} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" href={siteMetadata.media.faviconIco} sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href={siteMetadata.media.favicon16} />
    <link rel="icon" type="image/png" sizes="32x32" href={siteMetadata.media.favicon32} />
    <link rel="apple-touch-icon" sizes="180x180" href={siteMetadata.media.appleTouchIcon} />
    <link rel="manifest" href={siteMetadata.media.manifestPath} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content={siteMetadata.siteName} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content={String(ogImageWidth)} />
    <meta property="og:image:height" content={String(ogImageHeight)} />
    {ogType === 'article' && publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {ogType === 'article' && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:site" content={siteMetadata.xHandle} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    {noindex && <meta name="robots" content="noindex,nofollow" />}
  </head>
  <body class="bg-canvas text-ink antialiased">
    <div class="site-bg" aria-hidden="true"></div>
    <div class="site-shell">
      <Nav />
      <main class="site-main">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
